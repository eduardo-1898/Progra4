@model KN_WEB.Entities.UsuarioEnt
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">

        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                @using (Html.BeginForm("SingIn", "Login", FormMethod.Post, new { @id = "sendform" }))
                {
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href=@Url.Action("Index","Login") class="">
                            <h3 class="text-primary">Service365</h3>
                        </a>
                        <h3>Ingresar</h3>
                    </div>
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.Correo, new { @id = "email", @type = "email", @class = "form-control", @placeholder = "name@example.com", @required = true })
                        <label for="email">Correo</label>
                    </div>
                    <div class="form-floating mb-4">
                        @Html.TextBoxFor(m => m.Contrasenna, new { @id = "password", @type = "password", @class = "form-control", @placeholder = "Password", @required = true })
                        <label for="password">Contraseña</label>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <a href="@Url.Action("RecuperarContraseña", "Login")">Has olvidado tu contraseña?</a>
                    </div>
                    <input type="submit" class="btn btn-primary py-3 w-100 mb-4" value="Ingresar" />
                    <p class="text-center mb-0">No tienes una cuenta? <a href=@Url.Action("Registro","Login")>Registrate</a></p>
                }
            </div>
        </div>
    </div>
</div>

@*<script src="~/WebStyles/js/Login/index.js"></script>*@
@if (TempData["ErrorMesagge"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Ha ocurrido un error..',
            html: '@TempData["ErrorMesagge"].ToString()'
        })
    </script>
}

@if (TempData["SuccessMesagge"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Proceso ejecutado con éxito',
            html: '@TempData["SuccessMesagge"].ToString()'
        })
    </script>
}