@model KN_WEB.Entities.ServicioEnt
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Mantenimiento de servicios</h6>
                @using (Html.BeginForm("InsertServicio", "Servicios", FormMethod.Post, new { @id = "sendform" }))
                {
                    @Html.TextBoxFor(m => m.idServicio, new { @id = "idServicio", @type = "text", @class = "form-control", @hidden = true })
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label for="marca" class="form-label">Tipo de servicio</label>
                            @Html.TextBoxFor(m => m.TipoServicio, new { @id = "TipoServicio", @type = "text", @class = "form-control", @required = true })
                        </div>
                        <div class="col-6 mb-3">
                            <label for="modelo" class="form-label">Tiempo</label>
                            @Html.TextBoxFor(m => m.Tiempo, new { @id = "tiempo", @type = "text", @class = "form-control", @required = true })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar o modificar</button>
                }
            </div>
        </div>
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Listado de dispositivos</h6>
                <div class="table-responsive">
                    <table id="serviceTable" class="table table-hover text-center" width="100%">
                        <thead>
                            <tr>
                                <th>Tipo de servicio</th>
                                <th>Tiempo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/WebStyles/js/datatables/jquery.dataTables.min.js"></script>
<script src="~/WebStyles/js/datatables/dataTables.bootstrap4.min.js"></script>
<script src="~/WebStyles/js/datatables/dataTables.buttons.min.js"></script>
<script src="~/WebStyles/js/datatables/buttons.bootstrap4.min.js"></script>
<script src="~/WebStyles/js/datatables/jszip.min.js"></script>
<script src="~/WebStyles/js/datatables/pdfmake.min.js"></script>
<script src="~/WebStyles/js/datatables/vfs_fonts.js"></script>
<script src="~/WebStyles/js/datatables/buttons.html5.min.js"></script>
<script src="~/WebStyles/js/datatables/buttons.print.min.js"></script>
<script src="~/WebStyles/js/datatables/buttons.colVis.min.js"></script>
<script src="~/WebStyles/js/Servicio/list.js"></script>

@if (TempData["ErrorMesagge"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Ha ocurrido un error..',
            html: '@TempData["ErrorMesagge"].ToString()'
        })
    </script>
}

@if (TempData["SuccessMesagge"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Proceso ejecutado con éxito',
            html: '@TempData["SuccessMesagge"].ToString()'
        })
    </script>
}
